{{#each posts}}
  <article class="p-4 mb-8 bg-white rounded shadow">
    <h2 class="text-2xl font-bold mb-2">{{this.title}}</h2>
    <p class="text-gray-600 mb-4">Written by <span class="font-semibold">{{this.author}}</span> on <span class="font-semibold">{{this.date}}</span></p>
    <div class="prose">{{{this.content}}}</div>
  </article>
{{/each}}